        Title="DatabaseConnSetup" Height="340.278" Width="518.055" Loaded="frmDatabaseConnection_Loaded">
    <Grid Height="333" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="209*"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="groupTraker" Header="Tracker Database" HorizontalAlignment="Left" Height="252" Margin="39,24,0,0" VerticalAlignment="Top" Width="429" Grid.RowSpan="2"/>
        <Grid HorizontalAlignment="Left" Height="250" Margin="39,35,0,0" VerticalAlignment="Top" Width="429" Grid.RowSpan="2">
            <TextBox x:Name="txtServer" HorizontalAlignment="Left" Height="23" Margin="138,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="138,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"/>
            <Label Content="Server Host :" HorizontalAlignment="Left" Margin="38,28,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.471,-1.024"/>
            <Label Content="Username :" HorizontalAlignment="Left" Margin="46,56,0,0" VerticalAlignment="Top"/>
            <Label Content="Password :" HorizontalAlignment="Left" Margin="49,82,0,60"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="138,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"/>
            <TextBox x:Name="txtDatabase" HorizontalAlignment="Left" Height="23" Margin="138,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"/>
            <Label Content="Database :" HorizontalAlignment="Left" Margin="50,109,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnTestConnection" Content="Test Connection" HorizontalAlignment="Left" Margin="138,179,0,0" VerticalAlignment="Top" Width="119" Click="btnTestConnection_Click"/>
            <TextBox x:Name="txtPortNumber" HorizontalAlignment="Left" Height="23" Margin="138,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"/>
            <Label Content="Port Number :" HorizontalAlignment="Left" Margin="30,137,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.407,2.327"/>
            <Label x:Name="lblConnection" Content="Connection!" HorizontalAlignment="Left" Margin="133,209,0,0" VerticalAlignment="Top"/>
        </Grid>

    </Grid>
</Window>
