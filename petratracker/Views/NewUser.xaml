<Window x:Class="petratracker.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewUser" Height="348.175" Width="394.175">
    <Grid Margin="0,10,2,14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="136*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label Content="First Name" HorizontalAlignment="Left" Margin="52,64,0,0" VerticalAlignment="Top" Height="26" Width="78"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="52,95,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.909,-0.709" Height="26" Width="78"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="16,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="16,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Label Content="Department" HorizontalAlignment="Left" Margin="52,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.909,-0.709" Height="26" Width="78"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="16,127,0,0" VerticalAlignment="Top" Width="176" Height="22"/>
        <Label Content="NEW USER" HorizontalAlignment="Left" Margin="54,21,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Width="123" Height="31" Grid.ColumnSpan="2"/>
        <Label Content="Email " HorizontalAlignment="Left" Margin="53,157,0,0" VerticalAlignment="Top" Height="26" Width="42"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="16,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="52,188,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="16,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Button x:Name="btnSave" Content="Save" Grid.Column="1" HorizontalAlignment="Left" Margin="16,263,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click" Height="22"/>
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="16,225,0,0" VerticalAlignment="Top" Width="176" Height="22"/>
        <Label Content="User Role" HorizontalAlignment="Left" Margin="52,221,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.909,-0.709" Height="26" Width="78"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="1" HorizontalAlignment="Left" Margin="113,263,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="btnCancel_Click"/>


    </Grid>
</Window>
