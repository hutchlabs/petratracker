

    <Page x:Class="petratracker.Pages.jobs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"  Title="jobs" Loaded="Page_Loaded" >

        <DockPanel LastChildFill="True" Margin="0,0,0,0" HorizontalAlignment="Left">

            <StackPanel x:Name="SubsHeader" DockPanel.Dock="Top"  Orientation="Horizontal">
            <Label  x:Name="lblSubStatus" Content="JOBS" HorizontalAlignment="Left"  Margin="5,0,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"  />
            </StackPanel>

            <DataGrid Name="viewJobs"  Margin="20,20,20,20"   MinWidth="600" MouseDoubleClick="viewJobs_MouseDoubleClick"/>

        </DockPanel>


    </Page>
